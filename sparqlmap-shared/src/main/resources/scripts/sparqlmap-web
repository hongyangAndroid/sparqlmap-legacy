#!/bin/bash 
SCRIPT=`readlink -f $0`
SCRIPTPATH=`dirname $SCRIPT`

if [ ${PWD} != $SCRIPTPATH  ]; then
        echo "run from the script dir (${SCRIPTPATH})"
        exit 1
fi 

cd $SCRIPTPATH/..

SCRIPTPATHPARENT=$PWD

if [ -n  ${SPARQLMAP_HOME} ]; then
 SPARQLMAP_HOME="${SCRIPTPATHPARENT}/map-conf"
fi 

JAVAOPTS+= " -Xms128m -Xmx512m" 

if [ "$1" ==  "-debug" ]; then
  JAVAOPTS+= " -Xdebug -Xrunjdwp:transport='dt_socket,address=8765,server=y,suspend=n'"
fi

echo "Using SparqlMap configuration in ${SPARQLMAP_HOME}"

java $JAVAOPTS -DSPARQLMAP_HOME=${SPARQLMAP_HOME} -jar ./lib/jetty/@@@jettyrunner@@@ --path /sparqlmap ./lib/war/@@@sparqlmapwar@@@