<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>sparqlmap-cli</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
<!--   <baseDirectory>${project.artifactId}X${project.version}X</baseDirectory> -->

  

	<dependencySets>
		<dependencySet>
		<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>org.hsqldb:hsqldb</exclude>
				<exclude>org.postgresql:postgresql</exclude>
				<exclude>mysql:mysql-connector-java</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
		<outputDirectory>lib-jdbc</outputDirectory>
		<includes>
				<include>org.hsqldb:hsqldb</include>
				<include>org.postgresql:postgresql</include>
				<include>mysql:mysql-connector-java</include>
			</includes>
		</dependencySet>
		<dependencySet>
		<includes>
				<include>org.aksw.sparqlmap:sparqlmap-shared</include>
			</includes>
			<unpack>true</unpack>
			<unpackOptions>
			<includes>
				<include>map-conf/*</include>
				<include>mappings/*</include>
				<include>sample-data/*</include>
				</includes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory>bin</outputDirectory>
			<directory>src/assembly/bin/</directory>
		</fileSet>
	</fileSets>
  
 </assembly>